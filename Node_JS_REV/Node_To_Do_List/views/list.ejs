<main class="content">
  <div class="row pt-5 pb-5">
    <div class="col-md-12">
      <form action="/list/add-task" method="post">
        <div class="row g-3">
          <div class="col">
            <input
              type="text"
              class="form-control"
              placeholder="Task Title"
              aria-label="Task Title"
              name="title"
            />
          </div>
          <div class="col">
            <input
              type="text"
              class="form-control"
              placeholder="Priority"
              aria-label="Priority"
              name="priority"
            />
          </div>
          <div class="col">
            <input type="hidden" name="status" value="new" />
            <input type="submit" class="btn btn-primary" value="Add Task" />
          </div>
        </div>
      </form>
    </div>
  </div>

  <div class="row mb-3">
    <div class="col-md-12">
      <h1 class="border-bottom">Task List</h1>
    </div>
  </div>

  <div class="row">
    <div class="col-md-4">
      <div class="card">
        <div class="card-header bg-info text-white fs-4 fw-bold">New Task</div>
        <ul class="list-group list-group-flush">
          <% newTasks.forEach( task => { %>

          <li class="list-group-item">
            <%= task.title %>
            <span class="btn btn-info float-end text-white"
              ><a class="text-white" href="/list/in-progress/<%= task._id %>"
                ><i class="bi bi-arrow-right-square"></i></a
            ></span>
          </li>
          <% }) %>
        </ul>
      </div>
    </div>
    <div class="col-md-4">
      <div class="card">
        <div class="card-header bg-success text-white fs-4 fw-bold">
          Progress
        </div>
        <ul class="list-group list-group-flush">
          <% progTasks.forEach( task => { %>

          <li class="list-group-item">
            <%= task.title %>
            <span class="btn btn-success float-end text-white"
              ><a class="text-white" href="/list/completed/<%= task._id %>"
                ><i class="bi bi-arrow-right-square"></i></a
            ></span>
          </li>
          <% }) %>
        </ul>
      </div>
    </div>
    <div class="col-md-4">
      <div class="card">
        <div class="card-header bg-danger text-white fs-4 fw-bold">
          Completed
        </div>
        <ul class="list-group list-group-flush">
          <% compTasks.forEach( task => { %>

          <li class="list-group-item">
            <%= task.title %>
            <span class="btn btn-danger float-end text-white"
              ><a class="text-white"  href="/list/deleted/<%= task._id %>"
                ><i class="bi bi-trash"></i></a
            ></span>
          </li>
          <% }) %>
        </ul>
      </div>
    </div>
  </div>
</main>
